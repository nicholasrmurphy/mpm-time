<form action="/users/newEntry" method="POST">
  <div class="form-group">
    <input type="hidden" name="firstName" id="firstName" value=<%=firstName%>>
    <input type="hidden" name="lastName" id="lastName" value=<%=lastName%>>
    <label>Regular Hours</label>
    <select
    class="form-control"
    id="regHours"
    name="regHours">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option selected>4</option>
      <option>5</option>
      <option>6</option>
      <option>7</option>
      <option>8</option>
      <option>9</option>
      <option>10</option>
      <option>11</option>
      <option>12</option>
    </select>
  </div>
  <div class="form-group">
    <label>Overtime Hours</label>
    <select
    class="form-control"
    id="otHours"
    name="otHours">
      <option selected>0</option>
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
      <option>6</option>
      <option>7</option>
      <option>8</option>
      <option>9</option>
      <option>10</option>
      <option>11</option>
      <option>12</option>
    </select>
  </div>
  <div class="form-group">
    <label>Room</label>
    <input
    class="form-control"
    id="room"
    name = "room"
    placeholder="101A">
  </div>
  <div class="form-group">
    <label>Building</label>
    <select
    class="form-control"
    id="building"
    name="building">
    <%buildings.forEach(function(item) { %>
      <option><%=item.name%></option>
    <%})%>
    </select>
  </div>
  <div class="form-group">
    <label>Work Performed</label>
    <input
    class="form-control"
    id="note"
    name="note"
    placeholder="Water damage">
  </div>
  <div class="form-group">
    <label>Turn Complete</label>
    <select
    class="form-control"
    id="complete"
    name="complete">
      <option>No</option>
      <option>Yes</option>
    </select>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary btn-block">
      Save Entry
    </button>
  </div>
</form>
