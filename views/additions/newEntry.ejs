<form action="/users/newEntry" method="POST">
  <div class="form-group">
    <label>Date Performed</label>
    <input type="date" class="form-control" name="datePerformed" id="datePerformed">
  </div>
  <div class="form-group">
    <label>Regular Hours</label>
    <select
    class="form-control"
    id="regHours"
    name="regHours">
      <option>0</option>
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option selected>4</option>
      <option>5</option>
      <option>6</option>
      <option>7</option>
      <option>8</option>
      <option>9</option>
      <option>10</option>
      <option>11</option>
      <option>12</option>
    </select>
  </div>
  <div class="form-group">
    <label>Overtime Hours</label>
    <select
    class="form-control"
    id="otHours"
    name="otHours">
      <option selected>0</option>
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
      <option>6</option>
      <option>7</option>
      <option>8</option>
      <option>9</option>
      <option>10</option>
      <option>11</option>
      <option>12</option>
    </select>
  </div>
  <div class="form-group">
    <label>Work Performed</label>
    <input
    class="form-control"
    id="note"
    name="note"
    placeholder="Water damage">
  </div>
  <div class="form-group"> <%#change this to job  names%>
    <label>Associated Job</label>
    <select
    class="form-control"
    id="job"
    name="job">
      <%jobData.forEach(function(item) { %>
        <option value="<%=item._id%>"><%=item.name%></option>
      <%});%>
    </select>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary btn-block">
      Save Entry
    </button>
  </div>
</form>
