<% include ./partials/header%>
<br><br>
<br>
<h1 class="mt-4">Filter Entries</h1>
<h4> Select the value to filter by </h4>
<br>
<form action="/dashboard" method="POST">
    <div class="form-group">
        <input type="hidden" name="filterBy" id="filterBy" value=<%=param%>>
    </div>
    <%for (var i=0;i<readables.length;i++){%>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="filterValue" id="filterValue<%=i%>" value="<%=values[i]%>" checked>
                <label class="form-check-label" for="filterValue<%=i%>">
                    <%=readables[i]%>
                </label>
        </div>
    <%}%>
    <br>
    <button type="submit" class="btn btn-primary">
        Filter Entries
    </button>
</form>