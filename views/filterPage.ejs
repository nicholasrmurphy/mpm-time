<% include ./partials/header%>
<br><br>
<br>
<h4> Select the value to filter by </h4>
<br>
<form action="/dashboard" method="POST">
    <div class="form-group">
        <input type="hidden" name="filterBy" id="filterBy" value=<%=param%>>
    </div>
    <%for (var i=0;i<result.length;i++){%>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="filterValue" id="filterValue<%=i%>" value="<%=result[i]%>" checked>
                <label class="form-check-label" for="filterValue<%=i%>">
                    <%=result[i]%>
                </label>
        </div>
    <%}%>
    <br>
    <button type="submit" class="btn btn-primary">
        Filter Entries
    </button>
</form>